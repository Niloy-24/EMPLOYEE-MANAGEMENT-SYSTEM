void remove_record()
{
     system("cls");
      title();
    	char name1[30];
	int counter=0;

	FILE *fp = fopen("A.txt","a");
	int records =NULL;
	FILE *fp1;
	fp1=fopen("adding_record","a+");
	fflush(stdin);
	printf("Enter the Name:\n");
	scanf("%s",name1);
	while(counter!=records)
	{
		fread(&e,sizeof(struct add_record),1,fp);
		if(e[i].name==name1)
		{
		    printf("data is matching");
		}
		else
		{
			fwrite(&e,sizeof(struct add_record),1,fp);
		}
		counter++;
	}
	fclose(fp);
	fclose(fp1);
	remove("adding_record.txt");
	rename("A.txt","adding_record.txt");
	printf("Press any key..");
	printf("\n\n\tdelete successfully.....");
	printf("\n\ndo you want to go back?");
   printf("\n\n\t1.to see record?..\n\t2.go back?\n\t3.another");
   printf("\nenter your choise: ");
    int c;
    scanf("%d",&c);
    switch(c)
    {
    case 1:
        {
                title();
             system("cls");
            see_record();
              _getch();
        }
    case 2:
        {
              title();
             system("cls");
             employee_menu();
              _getch();
        }
    }
	_getch();
}


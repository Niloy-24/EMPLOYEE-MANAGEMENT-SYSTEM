void uad()
{
    system("cls");
    title();
    char se[1000],c;
    FILE *fp , *fp1;
    fp=fopen("emp_rec.txt", "a");
    if (fp== NULL)
    {
        printf("error!");

    }
    printf("enter your sentence:\n");
    fflush(stdin);
    gets(se);
    fprintf(fp,"%s\n", se);
    printf("\nINPUT IS SAVED!");
    fclose(fp);

    loading();
    fp1=fopen("emp_rec.txt","r");
    if(fp1=NULL)
    {
        printf("error!!");
    }
    do
    {
        c=fgetc(fp1);
        putchar(c);
    }while(c!=(EOF));

printf("\nDo you want to back the last page?");
    printf("\n1.yes\n2.no");
    printf("\nEnter your choice:");
      int s;
    scanf("%d",&s);
    switch(s)
    {
    case 1:
        {
            loading();
            system("cls");
            title();
            employee_info();
            _getch();
            break;
        }
    case 2:
        {
             loading();
            system("cls");
            title();
            printf("please log out!!");
            _getch();
            system("cls");
            logout();
            _getch();
            break;
        }
    }
      _getch();

}

void cer()
{
    system("cls");
    title();
    FILE *fp;
    fp=fopen("emp_rec.txt","r");
    char ch;
    int x=1;
    printf("============================================\n\n");
    printf("\tName:\t\t");
    if(fp==NULL)
    {
        printf("error!!");
    }
    do
    {
        ch=fgetc(fp);
        putchar(ch);
        if (ch=='\0'){
            printf("\b");
        }
        if (ch=='\n'){
            if (x==1){
                printf("\tPassword:\t");
            } else if (x==2){
                printf("\tEmail:\t\t");
            }
            else if (x==3){
                printf("\tPhone:\t\t");
            }
            x++;
        }

    }while(ch!=(EOF));
    printf("\b\n============================================\n");
    printf("\nDo you want to back the last page?");
    printf("\n1.yes\n2.no");
    printf("\nEnter your choice:");
      int s;
    scanf("%d",&s);
    switch(s)
    {
    case 1:
        {
            loading();
            system("cls");
            title();
            employee_info();
            _getch();
            break;
        }
    case 2:
        {
             loading();
            system("cls");
            title();
            printf("please log out!!");
            logout();
            _getch();
            break;
        }
    }
    _getch();
}


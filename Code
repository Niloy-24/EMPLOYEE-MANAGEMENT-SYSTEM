void login()
{
    system("cls");
    title();
    char Username[30];
       char Password[40];
       char c;
       int z=0;
       printf("\n\n\n\t\t\t\tTo login your account please enter your username and password");
       printf("\n\n\n\t\t\tUsername:");
       scanf("%s",Username);
       printf("\n\t\t\tPassword:");
       while((c=getch())!=13)
       {
         Password[z++]=c;
         printf("%c",'*');
       }
       Password[z]='\0';
       if(strcmp(Username,"Aryan")==0&&strcmp(Password,"12345")==0)
    {
        system("cls");
        printf("\n\n\n\n\t\t\t**You are successfully login**");
        printf("\n\n\t\t\t***WELCOME,HAVE A NICE DAY***");
        printf("\n\n\t\t\t***Press enter to continue***\n\n\n");
        employee_info();
        _getch();
    }
    else if(strcmp(Username,"Niloy")==0 &&strcmp(Password,"12345")==0)
    {
        system("cls");
        printf("\n\n\n\n\t\t\t***You are successfully login***");
        printf("\n\n\t\t\t***WELCOME,HAVE A NICE DAY***");
        printf("\n\n\t\t\t***Press enter to continue***\n\n\n");
        employee_info();
        _getch();
    }
    else
    {
      system("cls");
      printf("\n\t\tYour Username and Password is invalid");
      printf("\n\t\tDo you exit?");
      printf("\n\t\tPlease enter 1 to go back");
      login();
      //registration();
      _getch();
    }

}


void registration()
{
    system("cls");
    char Password[40];
     char c;
     int z=0;
       for(i=0;i<100;i++)
       {
           printf("\n\t\t===================================");
           printf("\n\t\t\tWELCOME TO NEW MEMBER");
           printf("\n\t\t===================================");
           printf("\nYou have to fill up the gap for registration.......\n\n");
         printf("  \nEnter your name:");
         scanf("%s",r[i].Name);
         printf("  \nEnter your username:");
         scanf("%s",r[i].Username);

         printf("  \nEnter your address:");
         scanf("%s",r[i].add);
         printf("  \nEnter your contact number:");
         scanf("%d",r[i].mob);
         printf("  \nEnter your password:");
         while((c=getch())!=13)
       {
         Password[z++]=c;
         printf("%c",'*');
       }
       Password[z]='\0';
       printf("\n\n\t\tpress enter to finish your registration");
        if((c=_getch())==13)
        {
            printf("\n\n\n\t\tYou are successfully register");
            printf("\n\n\n\t\tDo you want to login your account???\n\n\t\t");
            login();
        }
        break;
       }

       _getch();
}
 void loading()
 {
    char a[]="Loading........";
    printf("\n\n\n\n\n\n\n\n\t\t\t\t\xdb\xdb");
    for(i=0;a[i]!='\0';i++)
    {
        Sleep(50);
        printf("%c",a[i]);
    }

 }



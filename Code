void employee_login()
{
    system("cls");
    title();
    printf("\n\n\n\t\t\tEMPLOYEE LOGIN");
      printf("\n\t\t============================== ");
      int i,regi=0,optioon=0;
      char ch;
    FILE*fp1,*fp2;
    fflush(stdin);
    char name1[30];
    char passw[30];
    printf("\n\n\nEmployee name:");
    fgets(name1, 30, stdin);
    fflush(stdin);
    printf("password:");
    fgets(passw, 30, stdin);
    fp1=fopen("emp_rec.txt","r");
    fread(&emp ,sizeof(emp),1,fp1);
    fclose(fp1);
    for(i=0;i<200;i++)
    {
        if((strcmp(name1,emp[i].name)==0)&&(strcmp(passw,emp[i].pass)==0))
           {
               printf("correct name & password");
               printf("\n");
               i=200;
               optioon=1;
           }
    }
      if (optioon==1)
            {

                system("pause");
                 system("cls");
                printf("\n\n\n\t1.Employee Details\n\t2.Logout\n");
                printf("enter your choice:  ");

                int d;
                scanf("%d",&d);
                switch(d)
                {
                case 1:
                    {
                        system("cls");
                        title();
                        employee_menu();
                        _getch();
                        break;
                    }
                case 2:
                    {
                        system("cls");
                        title();
                        emp_logout();
                        _getch();
                        break;
                    }
                }
                printf("\n");
                system("pause");
            }
            else
            {
                printf("wrong pass or name\n");
                system("pause");
                printf("1.registration\n");
                printf("2.login again\n");
                printf("3.back\n");
                printf("enter your choice:");
                fflush(stdin);
                int c;
                scanf("%d",&c);
                if(c==1)
                {
                    employee_reg();
                }
                else if(c==2)
                {
                    employee_login();
                }
                else
                {
                    record_menu();
                }
            }
    _getch();
}


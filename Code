int Front_page()
{
    loading();
    system("cls");
    title();
    printf("\n\n\n\n\n\t\t\t\t\t##########################");
    printf("\n\t\t\t\t\t\tADMIN PAGE:");
    printf("\n\t\t\t\t\t##########################");
    mainmenu:
    printf("\n\n\t\t\t1.login\t\t\t\t2.registration\n");
    printf("\n\n\t\t\tYour Choise:  ");
    int m;
    scanf("%d",&m);
    switch (m)
    {
        case 1:
     {
        title();
        login();

        _getch();
        system("cls");
        break;

     }
    case 2:
     {
        title();
        registration();
        break;
     }
     default:
        {
            title();
            printf("\n\n\t***Wrong entry***");
            printf("Press Enter To Re-entry The Choice:");
            _getch();
            if(getch()==13)

        goto mainmenu;
        }
        return 0;
    }
    _getch();

}



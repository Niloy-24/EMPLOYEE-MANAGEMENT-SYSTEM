}

void employee_reg()
{
     system("cls");
     title();
    char Password[40];
    int i,regi=0, optioon=0,pc=0;
    FILE *fp1,*fp2;
    fp2=fopen("emp_reg.txt","r");
    if(fp2==NULL)
    {
        fp2=fopen("emp_reg.txt","w");
       fwrite(&regi, sizeof (regi), 1, fp2);
       fclose(fp2);
    }
    fread(&regi, sizeof(regi), 1, fp2);
    fclose(fp2);
    fp1=fopen("emp_rec.txt","r");
    if(fp1=NULL)
    {
        fp1=fopen("emp_rec.txt","w");
        fclose(fp1);
    }
    fread(&em, sizeof(em), 1, fp1);
    fclose(fp1);
    fflush(stdin);
    for(i=regi;i<regi+1;i++)
    {
        printf("\n\n\tEnter name:");
        fgets(em[i].name, 30,stdin);
         printf("\n\n\tEnter Pass:");
        fgets(em[i].pass, 30,stdin);
         printf("\n\n\tEnter Email Address:");
        fgets(em[i].email_add, 50,stdin);
         printf("\n\n\tEnter Mobile Number:");
        fgets(em[i].mob, 12,stdin);
    }
    fp1=fopen("emp_rec.txt","w");
    fwrite(&em, sizeof(em),1,fp1);
    fclose(fp1);
    fp2=fopen("emp_reg.txt","w");
    regi++;
    fwrite(&regi, sizeof(regi), 1, fp2);
    fclose(fp2);
    pc=pc+1;
    printf("\n\t\t\tYour are successfully Registered");
    printf("\n\t\t\t1.Login");
     printf("\n\t\t\t2.Back");
      printf("\n\t\t\tEnter You choice:");
      int c;
      scanf("%d",&c);
      if(c==1)
      {
          employee_login();
      }
      else
    {
       record_menu();
    }
       _getch();
}

